{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "debug:frontend",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/apps/frontend/node_modules/.bin/next",
      "args": ["dev", "--hostname", "${env:HOSTNAME:-0.0.0.0}", "--inspect"],
      "cwd": "${workspaceFolder}/apps/frontend",
      "console": "integratedTerminal",
      "env": {
        "NODE_ENV": "development"
      },
      "envFile": "${workspaceFolder}/.env",
      "skipFiles": ["<node_internals>/**"],
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "!**/node_modules/**"
      ],
      "sourceMaps": true,
      "outFiles": ["${workspaceFolder}/apps/frontend/.next/**/*.js"]
    },
    {
      "name": "attach:frontend",
      "type": "node",
      "request": "attach",
      "port": "${env:DEBUG_PORT:-9229}",
      "address": "${env:HOSTNAME:-localhost}",
      "cwd": "${workspaceFolder}/apps/frontend",
      "protocol": "inspector",
      "sourceMaps": true,
      "outFiles": ["${workspaceFolder}/apps/frontend/.next/**/*.js"],
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "!**/node_modules/**"
      ],
      "envFile": "${workspaceFolder}/.env",
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "debug:backend",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/apps/backend/node_modules/.bin/ts-node-dev",
      "args": ["--respawn", "--transpile-only", "--host", "${env:HOSTNAME:-0.0.0.0}", "--inspect=${env:HOSTNAME:-0.0.0.0}:${env:DEBUG_PORT:-9229}", "--inspect-brk", "src/index.ts"],
      "cwd": "${workspaceFolder}/apps/backend",
      "console": "integratedTerminal",
      "env": {
        "NODE_ENV": "development",
        "PORT": "${env:PORT:-4000}",
        "DEBUG_PORT": "${env:DEBUG_PORT:-9229}"
      },
      "envFile": "${workspaceFolder}/.env",
      "skipFiles": ["<node_internals>/**"],
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "!**/node_modules/**"
      ],
      "sourceMaps": true
    },
    {
      "name": "attach:backend",
      "type": "node",
      "request": "attach",
      "port": "${env:DEBUG_PORT:-9229}",
      "address": "${env:HOSTNAME:-localhost}",
      "cwd": "${workspaceFolder}/apps/backend",
      "protocol": "inspector",
      "sourceMaps": true,
      "envFile": "${workspaceFolder}/.env",
      "skipFiles": ["<node_internals>/**"],
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "!**/node_modules/**"
      ]
    },
    {
      "name": "debug:jest-tests",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/apps/frontend/node_modules/.bin/jest",
      "args": ["--runInBand", "--inspect-brk"],
      "cwd": "${workspaceFolder}/apps/frontend",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "env": {
        "NODE_ENV": "test"
      },
      "envFile": "${workspaceFolder}/.env",
      "skipFiles": ["<node_internals>/**", "node_modules/**"],
      "sourceMaps": true,
      "outFiles": ["${workspaceFolder}/apps/frontend/**/*.js"],
      "resolveSourceMapLocations": ["${workspaceFolder}/**", "!**/node_modules/**"]
    },
    {
      "name": "debug:mocha-tests",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/apps/backend/node_modules/.bin/mocha",
      "args": [
        "--inspect-brk",
        "--require", "ts-node/register",
        "src/**/*.test.ts"
      ],
      "cwd": "${workspaceFolder}/apps/backend",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "env": {
        "NODE_ENV": "test"
      },
      "envFile": "${workspaceFolder}/.env",
      "skipFiles": ["<node_internals>/**", "node_modules/**"],
      "sourceMaps": true,
      "outFiles": ["${workspaceFolder}/apps/backend/dist/**/*.js"],
      "resolveSourceMapLocations": ["${workspaceFolder}/**", "!**/node_modules/**"]
    },
    {
      "name": "debug:e2e-tests",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/apps/frontend/node_modules/.bin/playwright",
      "args": ["test", "--headed", "--debug", "--inspect-brk"],
      "cwd": "${workspaceFolder}/apps/frontend",
      "console": "integratedTerminal",
      "env": {
        "NODE_ENV": "test"
      },
      "envFile": "${workspaceFolder}/.env",
      "skipFiles": ["<node_internals>/**", "node_modules/**"],
      "sourceMaps": true,
      "outFiles": ["${workspaceFolder}/apps/frontend/**/*.js"],
      "resolveSourceMapLocations": ["${workspaceFolder}/**", "!**/node_modules/**"]
    },

  ],
  "compounds": [
    {
      "name": "debug:full-stack",
      "configurations": [
        "debug:frontend",
        "debug:backend"
      ],
      "stopAll": true
    },
    {
      "name": "debug:full-stack-with-db",
      "configurations": [
        "debug:frontend",
        "debug:backend"
      ],
      "stopAll": true,
      "preLaunchTask": "db:up:postgres"
    },
    {
      "name": "attach:full-stack",
      "configurations": [
        "attach:frontend",
        "attach:backend"
      ],
      "stopAll": true,
      "preLaunchTask": "dev:full"
    },
    {
      "name": "attach:full-stack-with-db",
      "configurations": [
        "attach:frontend",
        "attach:backend"
      ],
      "stopAll": true,
      "preLaunchTask": "dev:full-with-db"
    },
    {
      "name": "debug:all-tests",
      "configurations": [
        "debug:jest-tests",
        "debug:mocha-tests"
      ],
      "stopAll": true
    }
  ]
} 