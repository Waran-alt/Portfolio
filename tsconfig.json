{
  "compilerOptions": {
    // Language and Environment
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "ESNext",
    "moduleResolution": "node",
    
    // Emit Configuration
    "noEmit": true, // Override in packages that need to emit
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": false, // Override in packages that need declarations
    "declarationMap": false,
    "sourceMap": false,
    
    // Interop Constraints
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    
    // Type Checking
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "exactOptionalPropertyTypes": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noUncheckedIndexedAccess": true,
    "noFallthroughCasesInSwitch": true,
    "allowUnusedLabels": false,
    "allowUnreachableCode": false,
    
    // Additional Checks
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "incremental": true,
    
    // JSX (for frontend)
    "jsx": "preserve",
    
    // Path Mapping
    "baseUrl": ".",
    "paths": {
      "@portfolio/shared": ["packages/shared/src"],
      "@portfolio/shared/*": ["packages/shared/src/*"]
    }
  },
  "exclude": [
    "node_modules",
    "dist",
    "build",
    ".next",
    "coverage",
    "**/*.test.ts",
    "**/*.spec.ts"
  ],
  "references": [
    {
      "path": "./packages/shared"
    },
    {
      "path": "./apps/frontend"
    },
    {
      "path": "./apps/backend"
    }
  ]
} 