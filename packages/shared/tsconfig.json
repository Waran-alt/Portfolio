{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    // Override emit settings for building
    "noEmit": false,
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    
    // Build optimization
    "composite": true,
    "incremental": true,
    
    // Ensure consistent module resolution
    "module": "ESNext",
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "**/*.test.ts"
  ]
} 