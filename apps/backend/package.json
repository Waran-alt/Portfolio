{
  "name": "@portfolio/backend",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "Portfolio backend API built with Node.js, Express, and TypeScript",
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/Waran-alt/Portfolio.git",
    "directory": "apps/backend"
  },
  "homepage": "https://github.com/Waran-alt/Portfolio",
  "scripts": {
    "dev": "tsx watch --inspect=0.0.0.0:9229 ./src/index.ts",
    "debug": "tsx watch --inspect=0.0.0.0:9229 --inspect-brk ./src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "type-check": "tsc --noEmit",
    "test": "mocha --require tsx 'src/**/*.test.ts'",
    "test:watch": "mocha --require tsx --watch 'src/**/*.test.ts'",
    "test:coverage": "nyc mocha --require tsx 'src/**/*.test.ts'",
    "migrate": "node dist/database/migrate.js",
    "seed": "node dist/database/seed.js",
    "db:reset": "yarn migrate && yarn seed",
    "clean": "rm -rf dist coverage .nyc_output"
  },
  "keywords": [
    "portfolio",
    "api",
    "express",
    "typescript",
    "postgresql",
    "docker"
  ],
  "author": "Waran-alt",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.0.1",
    "express": "^5.1.0",
    "express-rate-limit": "^7.5.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^2.0.1",
    "nodemailer": "^7.0.5",
    "pg": "^8.16.3",
    "redis": "^5.5.6",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "zod": "^3.25.75"
  },
  "devDependencies": {
    "@portfolio/shared": "workspace:^",
    "@types/bcryptjs": "^3.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/express-rate-limit": "^6.0.2",
    "@types/helmet": "^4.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/mocha": "^10.0.10",
    "@types/morgan": "^1.9.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.0.10",
    "@types/nodemailer": "^6.4.17",
    "@types/pg": "^8.15.4",
    "@types/redis": "^4.0.11",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^8.36.0",
    "@typescript-eslint/parser": "^8.36.0",
    "chai": "^5.2.0",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.1",
    "mocha": "^11.7.1",
    "nyc": "^17.1.0",
    "prettier": "^3.6.2",
    "supertest": "^7.1.1",
    "tsx": "^4.19.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=22.0.0",
    "yarn": ">=4.0.0"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "exclude": [
      "**/*.d.ts",
      "**/*.test.ts",
      "coverage/**/*",
      "dist/**/*"
    ],
    "require": [
      "tsx"
    ],
    "reporter": [
      "text",
      "html",
      "lcov"
    ],
    "all": true
  }
}
