{
  "name": "@portfolio/frontend",
  "version": "0.1.0",
  "private": true,
  "description": "Portfolio frontend application built with Next.js 15",
  "author": "Waran-alt",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Waran-alt/Portfolio.git",
    "directory": "apps/frontend"
  },
  "homepage": "https://github.com/Waran-alt/Portfolio",
  "scripts": {
    "dev": "next dev --hostname 0.0.0.0 --port ${FRONTEND_PORT}",
    "dev:turbo": "next dev --hostname 0.0.0.0 --port ${FRONTEND_PORT} --turbo",
    "build": "NEXT_PUBLIC_BUILD_TIME=$(date -u +%Y-%m-%dT%H:%M:%S.%3NZ) next build",
    "start": "next start --hostname 0.0.0.0",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "clean": "rm -rf .next out dist",
    "postinstall": "yarn dlx @yarnpkg/sdks vscode",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "analyze": "ANALYZE=true next build"
  },
  "dependencies": {
    "axios": "^1.10.0",
    "clsx": "^2.1.1",
    "framer-motion": "^12.23.0",
    "lucide-react": "^0.525.0",
    "next": "15.3.5",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-hook-form": "^7.60.0",
    "tailwindcss": "^4.1.11",
    "zod": "^3.25.75"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@next/bundle-analyzer": "^15.3.5",
    "@next/eslint-plugin-next": "^15.3.5",
    "@playwright/test": "^1.53.2",
    "@portfolio/shared": "workspace:^",
    "@storybook/addon-essentials": "^8.1.5",
    "@storybook/addon-interactions": "^8.1.5",
    "@storybook/addon-links": "^8.1.5",
    "@storybook/blocks": "^8.1.5",
    "@storybook/nextjs": "^8.1.5",
    "@storybook/react": "^8.1.5",
    "@storybook/test": "^8.1.5",
    "@tailwindcss/postcss": "^4.1.11",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/eslint-plugin-jsx-a11y": "^6",
    "@types/jest": "^30.0.0",
    "@types/node": "24.0.13",
    "@types/react": "19.1.8",
    "@types/react-dom": "^19.1.6",
    "@typescript-eslint/eslint-plugin": "^8.36.0",
    "@typescript-eslint/parser": "^8.36.0",
    "@typescript-eslint/types": "^8.36.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.30.1",
    "eslint-config-next": "^15.3.5",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "jest": "^30.0.4",
    "jest-environment-jsdom": "^30.0.4",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.13",
    "storybook": "^8.1.5",
    "typescript": "5.8.3"
  },
  "engines": {
    "node": ">=22.0.0",
    "yarn": ">=4.0.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
