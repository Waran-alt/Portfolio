{
  "name": "@portfolio/frontend",
  "version": "0.1.0",
  "private": true,
  "description": "Portfolio frontend application built with Next.js 15",
  "author": "Waran-alt",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Waran-alt/Portfolio.git",
    "directory": "apps/frontend"
  },
  "homepage": "https://github.com/Waran-alt/Portfolio",
  "scripts": {
    "dev": "next dev --hostname 0.0.0.0 --port ${FRONTEND_PORT}",
    "dev:turbo": "next dev --hostname 0.0.0.0 --port ${FRONTEND_PORT} --turbo",
    "build": "NEXT_PUBLIC_BUILD_TIME=$(date -u +%Y-%m-%dT%H:%M:%S.%3NZ) next build",
    "start": "next start --hostname 0.0.0.0",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:unit": "jest --testPathPatterns=unit\\.test",
    "test:integration": "jest --testPathPatterns=integration\\.test",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "test:debug": "jest --detectOpenHandles --forceExit",
    "test:e2e": "playwright test",
    "test:e2e:smoke": "playwright test --project=chromium --grep 'HomePage E2E'",
    "playwright:install": "playwright install",
    "playwright:install-deps": "playwright install-deps",
    "playwright:report": "playwright show-report",
    "clean": "rm -rf .next out dist",
    "postinstall": "yarn dlx @yarnpkg/sdks vscode",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "analyze": "cross-env ANALYZE=true next build",
    "debug": "cross-env NODE_OPTIONS='--inspect' next dev"
  },
  "dependencies": {
    "axios": "^1.12.2",
    "clsx": "^2.1.1",
    "framer-motion": "^12.23.24",
    "i18next": "^25.6.0",
    "lucide-react": "^0.548.0",
    "next": "15.3.5",
    "next-i18next": "^15.4.2",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-hook-form": "^7.65.0",
    "react-i18next": "^16.2.0",
    "styled-jsx": "^5.1.7",
    "svg-path-parser": "^1.1.0",
    "tailwindcss": "^4.1.11",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@next/bundle-analyzer": "^16.0.0",
    "@next/eslint-plugin-next": "^16.0.0",
    "@playwright/test": "^1.56.1",
    "@portfolio/shared": "workspace:^",
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/addon-interactions": "^8.6.14",
    "@storybook/addon-links": "^9.1.15",
    "@storybook/blocks": "^8.6.14",
    "@storybook/nextjs": "^9.1.15",
    "@storybook/react": "^9.1.15",
    "@storybook/test": "^8.6.14",
    "@tailwindcss/postcss": "^4.1.16",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/eslint-plugin-jsx-a11y": "^6.10.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.9.1",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@types/react-i18next": "^8.1.0",
    "@types/svg-path-parser": "^1.1.6",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "@typescript-eslint/types": "^8.46.2",
    "autoprefixer": "^10.4.21",
    "cross-env": "^10.1.0",
    "eslint": "^9.38.0",
    "eslint-config-next": "^16.0.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "storybook": "^9.1.15",
    "ts-jest": "^29.4.5",
    "typescript": "^5.9.3",
    "webpack": "^5.102.1"
  },
  "engines": {
    "node": ">=22.0.0",
    "yarn": ">=4.0.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
