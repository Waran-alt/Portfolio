# =============================================================================
# BACKEND SERVICE ENVIRONEMENT
# =============================================================================

# Server Configuration
PORT=4000
HOST=0.0.0.0

# Database Connection
# Note: Database credentials come from env.postgres
DATABASE_URL=postgresql://postgres:5432/portfolio_db

# Authentication
# Note: Secrets come from env.common
# JWT_SECRET and SESSION_SECRET are defined in env.common.example
JWT_EXPIRES_IN=7d

# Session Configuration
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTPONLY=true

# Development
# NODE_ENV is defined in env.common.example
